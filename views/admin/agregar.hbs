<div class="container" style="margin: 100px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post">
                <div class="form group">
                    <input type="text" class="form-control" id="FormControl" placeholder="Titulo" name="titulo">
                </div>
                <div class="form group">
                    <input type="text" class="form-control" id="FormControl" placeholder="Subtitulo" name="subtitulo">
                </div>
                <div class="form group">
                    <input type="text" class="form-control" id="FormControl" placeholder="Cuerpo" name="cuerpo">
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>